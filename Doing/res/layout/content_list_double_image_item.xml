<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="22dp"
    android:paddingRight="22dp">

    <include layout="@layout/content_list_item_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/content_image1"
            android:layout_width="@dimen/content_double_image_width_height"
            android:layout_height="@dimen/content_double_image_width_height"
            android:scaleType="centerCrop"
            android:src="@drawable/ex_horizontal" />

        <ImageView
            android:id="@+id/content_image2"
            android:layout_width="@dimen/content_double_image_width_height"
            android:layout_height="@dimen/content_double_image_width_height"
            android:layout_marginLeft="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ex_horizontal" />
    </LinearLayout>

    <include layout="@layout/content_list_item_footer" />
</LinearLayout>