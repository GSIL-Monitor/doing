<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/doing_theme_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="在干嘛"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/white" />
    </RelativeLayout>

    <com.doing.team.pulltorefresh.PullToRefreshListView
        android:id="@+id/content_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:divider="#F8F8F8"
        android:dividerHeight="10dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true">

    </com.doing.team.pulltorefresh.PullToRefreshListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="#f8f8f8">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line"
            android:layout_alignParentTop="true"
            android:background="#e1e1e1" />

        <ImageView
            android:id="@+id/my_news_imag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="48dp"
            android:paddingRight="30dp"
            android:src="@drawable/my_news_selector" />

        <ImageView
            android:id="@+id/publish_camera_imag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:src="@drawable/publish_button" />

        <ImageView
            android:id="@+id/personal_imag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="30dp"
            android:paddingRight="48dp"
            android:src="@drawable/persanal_selector" />
    </RelativeLayout>
</LinearLayout>