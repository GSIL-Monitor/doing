<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <com.doing.team.view.CircleImageView
        android:id="@+id/head_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/register_nick"
        android:layout_width="@dimen/register_info_width"
        android:layout_height="@dimen/register_info_height"
        android:layout_below="@+id/head_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/filtration_uncheck"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/register_nick_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:text="昵称" />

        <EditText
            android:id="@+id/register_nick_tv2"
            android:layout_width="@dimen/register_edit_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:hint="@string/register_nick"
            android:maxLength="6"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_age"
        android:layout_width="@dimen/register_info_width"
        android:layout_height="@dimen/register_info_height"
        android:layout_below="@+id/register_nick"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/filtration_uncheck"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/register_age_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:text="年龄" />

        <EditText
            android:id="@+id/register_age_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:hint="@string/register_age"
            android:ems="2"
            android:phoneNumber="true"
            android:maxLength="2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_profession"
        android:layout_width="@dimen/register_info_width"
        android:layout_height="@dimen/register_info_height"
        android:layout_below="@+id/register_age"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/filtration_uncheck"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/register_profession_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:text="职业" />

        <EditText
            android:id="@+id/register_profession_tv2"
            android:layout_width="@dimen/register_edit_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:hint="@string/register_profession"
            android:maxLength="6" />
    </LinearLayout>

    <TextView
        android:id="@+id/register_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_profession"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:clickable="false"
        android:text="已帮你精心挑选了头像和个人呢信息" />

    <TextView
        android:id="@+id/register_confirm"
        android:layout_below="@+id/register_hint"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="完成"/>

</RelativeLayout>