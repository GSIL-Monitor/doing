<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/register_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/doing_theme_bg"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="22dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="9dp"
            android:text="注册"
            android:textColor="@color/white" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp">

        <com.doing.team.view.CircleImageView
            android:id="@+id/head_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/register_head" />

        <ImageView
            android:id="@+id/register_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/head_image"
            android:layout_marginLeft="-30dp"
            android:layout_toRightOf="@+id/head_image"
            android:src="@drawable/register_camera" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="17dp"
        android:text="已帮你精心挑选了头像和昵称"
        android:textColor="#a3a3a3"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37.5dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingLeft="@dimen/register_info_left__right_pading"
        android:paddingRight="@dimen/register_info_left__right_pading" >

        <RelativeLayout
            android:id="@+id/register_nick"
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_info_height"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/register_nick_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="昵称"
                android:textSize="@dimen/register_info_text_size"
                android:textColor="@color/register_info_text" />

            <EditText
                android:id="@+id/register_nick_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/register_nick_tv1"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/register_info_text_size"
                android:background="@null"
                android:layout_centerVertical="true"
                android:gravity="right|center_vertical"
                android:textColor="@color/register_info_hint_text"
                android:hint="@string/register_nick"
                android:textColorHint="@color/register_info_hint_text"
                android:maxLength="6" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/register_divider"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/register_age"
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_info_height"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/register_age_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="年龄"
                android:textSize="@dimen/register_info_text_size"
                android:textColor="@color/register_info_text" />

            <EditText
                android:id="@+id/register_age_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/register_age_tv1"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/register_info_text_size"
                android:background="@null"
                android:layout_centerVertical="true"
                android:gravity="right|center_vertical"
                android:textColor="@color/register_info_hint_text"
                android:ems="2"
                android:hint="@string/register_age"
                android:textColorHint="@color/register_info_hint_text"
                android:maxLength="2"
                android:phoneNumber="true" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/register_divider"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/register_profession"
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_info_height"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/register_profession_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="年龄"
                android:textSize="@dimen/register_info_text_size"
                android:textColor="@color/register_info_text" />

            <EditText
                android:id="@+id/register_profession_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/register_profession_tv1"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/register_info_text_size"
                android:background="@null"
                android:layout_centerVertical="true"
                android:gravity="right|center_vertical"
                android:textColor="@color/register_info_hint_text"
                android:textColorHint="@color/register_info_hint_text"
                android:hint="@string/register_profession"
                android:maxLength="6"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/register_divider"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/register_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_info_height"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="#f35600"
        android:background="@drawable/register_confirm_selector"
        android:text="完成" />

</LinearLayout>